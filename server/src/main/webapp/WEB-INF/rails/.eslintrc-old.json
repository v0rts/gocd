{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "browser": true,
    "amd": true,
    "es2018": true,
    "jasmine": true,
    "jquery": true
  },
  "rules": {
    "arrow-parens": [
      "error"
    ],
    "arrow-spacing": [
      "error"
    ],
    "template-curly-spacing": [
      "error",
      "never"
    ],
    "no-const-assign": [
      "error"
    ],
    "prefer-const": [
      "error"
    ],
    "eol-last": [
      "error"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "off"
    ],
    "indent-legacy": [
      "error",
      2
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": [
      "off"
    ],
    "no-empty": [
      "off"
    ],
    "no-undef": [
      "off"
    ],
    "no-redeclare": [
      "off"
    ],
    "no-cond-assign": [
      "off"
    ]
  }
}
